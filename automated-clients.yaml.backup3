server:
  host: "trading.hellsoft.tech"
  port: 443
  useSSL: true
  reconnectInterval: 5s
  maxReconnectAttempts: 10

# AI Configuration - supports OpenAI or DeepSeek
ai:
  provider: "openai"  # Options: "openai" or "deepseek"
  apiKey: "${OPENAI_API_KEY}"  # Use OPENAI_API_KEY or DEEPSEEK_API_KEY
  model: "gpt-4o"  # OpenAI: gpt-4o, gpt-4o-mini, o1-mini | DeepSeek: deepseek-chat
  endpoint: "https://api.openai.com/v1/chat/completions"  # Auto-set based on provider
  timeout: 30s
  maxRetries: 2

global:
  riskLimits:
    maxOrderSize: 1000
    maxPositionSize: 5000
    maxDailyLoss: 10000.0
  # Global trading pace - how often strategies execute (default: 1s)
  # This controls the speed between trading decisions
  # Examples: 1s (fast), 5s (medium), 10s (slow), 30s (very slow)
  tradingPace: 1s  # FAST: Execute every second for quick market response
  # Minimum time between sending orders (default: 0 = no delay)
  # This throttles rapid order submissions to avoid overwhelming the market
  # Examples: 500ms (fast), 1s (moderate), 2s (slow), 3s (very slow)
  minTimeBetweenOrders: 500ms  # FAST: Quick order submission

